{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "outDir": "./lib",
    "rootDir": ".",
    "types": ["vite/client", "node"],
    "skipLibCheck": true // needed for issues with vite
  },
  "include": [
    "./src/**/*",
    "./dist/static/static-renderer.js",
    "./render-static.ts"
  ]
}
